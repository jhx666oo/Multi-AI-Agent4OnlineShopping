# 生产环境变量配置示例
# 复制此文件为 .env 并填入真实值

# ========================================
# 数据库配置（必需）
# ========================================
DB_USER=agent
DB_PASSWORD=your-strong-password-here
DB_NAME=agent_db
DB_EXTERNAL_PORT=5432

# ========================================
# LLM 配置（必需）
# ========================================
OPENAI_API_KEY=your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_PLANNER=gpt-4o-mini
OPENAI_MODEL_VERIFIER=gpt-4o

# ========================================
# 服务端口配置（可选）
# ========================================
TOOL_GATEWAY_PORT=3000
WEB_APP_PORT=3001
CORE_MCP_PORT=3010
CHECKOUT_MCP_PORT=3011

# ========================================
# Web App 配置
# ========================================
# 生产环境需要设置为实际的域名或 IP
NEXT_PUBLIC_TOOL_GATEWAY_URL=http://your-server-ip:3000
# 或者使用域名
# NEXT_PUBLIC_TOOL_GATEWAY_URL=https://api.yourdomain.com

# ========================================
# CORS 配置
# ========================================
# 允许的前端域名，多个用逗号分隔
CORS_ORIGINS=http://your-server-ip:3001,https://yourdomain.com

# ========================================
# 安全配置（生产环境建议启用）
# ========================================
AUTH_ENABLED=false
JWT_SECRET=your-very-secure-jwt-secret-key-change-this

# ========================================
# XOOBAY API 配置（可选，用于产品数据源）
# ========================================
XOOBAY_ENABLED=false
XOOBAY_API_KEY=xoobay_api_ai_geo
XOOBAY_BASE_URL=https://www.xoobay.com
XOOBAY_LANG=en

# ========================================
# 可选配置
# ========================================
TOKEN_BUDGET_TOTAL=50000
MOCK_TOOLS=false
